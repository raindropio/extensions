@require "../const.styl";

.type-page {
	footer {
		margin: (defaultGap+8px) (defaultGap*-1);
		margin-bottom: (defaultGap*-1);
		padding: (defaultGap/2)
		background: colorLightGray;
		box-shadow: inset 0 var(--thin-border, 1px) 0px var(--thin-border-color, rgba(0,0,0,.1));
		text-align: center;
		
		.button {
			padding-left: defaultGap*2;
			padding-right: defaultGap*2;
		}
	}
	
	header, .type-selector, .type-description {
		margin: 0 8px;
	}
	
	.type-selector {
		display: flex;
		
		a {
			cursor: pointer;
			flex: 1;
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			color: black;
			font('semibold');
			font-size: 14px;
			padding: 24px 0;
			padding-bottom: 14px;
			
			.img {
				display: flex;
				align-items: center;
				justify-content: center;
				flex:1;
			}
			
			.title {
				margin-top: 8px;
				padding: 1px 8px;
				border-radius: 20px;
			}
			
			&.active {
				.title {
					background: colorTheme;
					color: white;
				}
			}
		}
	}
	
	.type-description {
		color: rgba(0,0,0,.6);
		p {
			margin:0;padding:0;
		}
	}
}
@keyframes fadeIn {
	0% {
		opacity: 0;
	}
	100% {
		opacity: 1;
	}
}

@keyframes fadeOutWithDelay {
	0% {
		opacity: 1;
	}
	50% {
		opacity: 1;
	}
	100% {
		opacity: 0;
	}
}

@keyframes fadeInWithDelay {
	0% {
		opacity: 0;
	}
	50% {
		opacity: 0;
	}
	100% {
		opacity: 1;
	}
}

@keyframes appLoaded {
	0% {
		max-height: 78px;
	}
	30% {
		max-height: 78px;
	}
	100% {
		max-height: 250px;
	}
}

@keyframes fadeInTranslate {
	0% {
		transform: translateX(10px);
		opacity: 0.3;
	}
	100% {
		transform: translateX(0px);
		opacity: 1;
	}
}

@keyframes fadeInTranslateBackward {
	0% {
		transform: translateX(-10px);
		opacity: 0.3;
	}
	100% {
		transform: translateX(0px);
		opacity: 1;
	}
}

@keyframes fadeInTranslateVertical {
	0% {
		transform: translateY(-5px);
		opacity: .3;
	}
	100% {
		transform: translateY(0);
		opacity: 1;
	}
}

@keyframes fadeInTranslateVerticalBackward {
	0% {
		transform: translateY(5px);
		opacity: .3;
	}
	100% {
		transform: translateY(0px);
		opacity: 1;
	}
}

@keyframes fadeInSearch {
	0% {
		transform: translateY(-4px);
		opacity: .3;
	}
	100% {
		transform: translateY(0px);
		opacity: 1;
	}
}